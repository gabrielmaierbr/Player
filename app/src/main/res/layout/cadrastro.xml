<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/davi"
    tools:context=".MainActivity">


    <View
        android:id="@+id/containerLogin"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/contaire_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />

    <Button
        android:id="@+id/button2"
        android:layout_width="271dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:text="CADASTRAR"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#009688"
        android:textColorLink="#FFC107"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextText3"
        tools:layout_editor_absoluteX="81dp" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Musica  App"
        android:textColor="#217FA7"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/containerLogin"
        app:layout_constraintStart_toStartOf="@id/containerLogin"
        app:layout_constraintTop_toTopOf="@id/containerLogin" />

    <TextView
        android:id="@+id/textDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#28CBCF"
        android:layout_marginTop="10dp"
        android:text="Cadrastrar"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/containerLogin"
        app:layout_constraintStart_toStartOf="@id/containerLogin"
        app:layout_constraintTop_toBottomOf="@id/txtTitle" />

    <EditText
        android:id="@+id/editTextText1"
        android:layout_width="359dp"
        android:layout_height="53dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/container_edita_texto_login"
        android:drawableRight="@drawable/baseline_person_outline_24"
        android:hint="digite seu nome"
        android:maxLines="1"
        android:padding="15dp"
        android:shadowColor="#3E4FAC"
        android:textColor="#121111"
        app:layout_constraintBottom_toTopOf="@+id/editTextText2"
        tools:layout_editor_absoluteX="26dp" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="359dp"
        android:layout_height="0dp"
        android:background="@drawable/container_edita_texto_login"
        android:drawableRight="@drawable/baseline_email_24"
        android:hint="digite seu gmail"
        android:inputType="textWebEmailAddress"
        android:maxLines="1"
        android:padding="15dp"
        android:shadowColor="#3E4FAC"
        android:textColor="#121111"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="304dp" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="359dp"
        android:layout_height="54dp"
        android:background="@drawable/container_edita_texto_login"
        android:drawableRight="@drawable/baseline_remove_red_eye_24"
        android:hint="Digite sua Senha"
        android:inputType="numberPassword"
        android:padding="15dp"
        android:textColorHighlight="#217FA7"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="366dp" />
    />


</androidx.constraintlayout.widget.ConstraintLayout>